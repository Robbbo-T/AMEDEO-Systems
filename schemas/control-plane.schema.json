{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["id","transport","clock_sync","max_jitter_us","safety_mode"],
  "properties": {
    "id": {"type":"string"},
    "transport": {"type":"string", "enum":["tsn","afdx","ethernet"]},
    "clock_sync": {"type":"string", "enum":["ptp","gpsdo","ntp"]},
    "max_jitter_us": {"type":"integer", "minimum": 1, "maximum": 2000},
    "safety_mode": {"type":"string","pattern":"^2oo3$"}
  }
}
